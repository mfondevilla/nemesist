{% extends 'base.html.twig' %}
{% block title %}Busqueda de items por catálogo{% endblock %}

{% block body %}
    {% block content %}
        <main class="principal principal-xs container">
            <div class="row alto">
                <div class="col-8">
                    {% if catalogues|length > 0 %}
                        <table>
                            <tr>
                                <th>Titulo</th>
                                <th>Subtitulo</th>
                                <th>Idioma</th>
                                <th>Periodicidad</th>
                            </tr>
                            {% for catalogue in catalogues %} 
                                
                                <tr>
                                    <td>{{ catalogue.title }}</td>
                                    <td>{{ catalogue.subtitle }}</td>
                                    <td>{{ catalogue.language }}</td>
                                    <td>{{ catalogue.periodicity }}</td>
                                    <td class="buttons">
                                        <a href="{{ path('display_issues', {'id':catalogue.id}) }}" class="btn-show">Ver Números</a>
                                        <a href="{{ path('issue_ini', {'id':catalogue.id}) }}" class="btn-show">Ver detalles revista</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                        <div class="navigation">
                            {{ knp_pagination_render(paginacion) }}
                        </div>
                    {% else %}
                        <p>{{ message }}</p>
                    {% endif %}
                </div>
            </div>
        </main>
    {% endblock %}
{% endblock %}